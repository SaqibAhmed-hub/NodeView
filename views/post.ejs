<%- include('_header'); -%>
<div class="row">
    <div class="col-md-4">
        <h1 class="display-3">My Blog Posts</h1>
    </div>
</div>
 
<div class="row">
    <div class="col-md-4" style="margin-bottom:10px;">
        <a href="/post/add" type="button" class="btn btn-primary btn-block">New Post</a>
    </div>
</div>
 
<% post.forEach(function(posts) { %>
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="thumbnail" >
        <% if(posts.image !=null) { %>
                <img src="<%= '/' + posts.image %> "
                    alt="logo"
                    style="height:200px;width:100%;display:block"
                    >            
            <% } else { %> 
                    <img src="data:image/svg+xml;base64,"
                        alt="logo"
                        style="height:200px;width:100%;display:block"
                        >       
                <% } %> 
       
            <div class="caption" >  
                <h3><%= posts.title %></h3>
                <p><%= posts.description %></p>
                <p><a href="<%= posts._id %>" class="btn btn-primary" role="button">Read</a> 
                    <a href="edit/<%= posts._id %>" class="btn btn-default" role="button">Edit</a></p>
            </div>
        </div>
    </div>
</div>
<% }) %>